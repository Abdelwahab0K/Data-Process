<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MAGHREB STEEL</title>

    <!-- ✅ Favicon -->
    <link rel="icon" type="image/png" href="~/images/icon/favicon.png" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <style>
        :root {
            --primary-blue: #012B51;
            --accent-yellow: #F3AD20;
            --alert-red: #C9372F;
        }

        *, *::before, *::after {
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        .hero-section {
            position: relative;
            height: 80vh;
            display: flex;
            align-items: center;
            overflow: hidden;
        }

        #particles-js {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -2;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/images/usine.jpg') center no-repeat;
            background-size: cover;
            z-index: -3;
            border-radius: 0 0 50% 50%/0 0 30% 30%;
            transform: scaleX(1.5);
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(1, 43, 81, 0.7);
            z-index: -1;
            border-radius: 0 0 50% 50%/0 0 30% 30%;
            transform: scaleX(1.5);
        }

        .hero-content {
            text-align: center;
            color: white;
            padding: 0 20px;
            width: 100%;
        }

        .navbar {
            background-color: transparent !important;
            padding: 20px 0;
            position: absolute;
            width: 100%;
            z-index: 100;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: white;
            font-weight: 500;
            margin: 0 15px;
        }

            .navbar-dark .navbar-nav .nav-link:hover {
                color: var(--accent-yellow);
            }

        .intranet-link {
            color: var(--accent-yellow) !important;
            font-weight: bold;
        }

        .logo {
            height: 30px;
            width: auto;
        }

        .btn-login {
            background-color: var(--accent-yellow);
            color: var(--primary-blue);
            border: none;
            padding: 12px 40px;
            font-size: 1.2rem;
            border-radius: 30px;
            font-weight: 600;
            margin-top: 30px;
            transition: all 0.3s;
        }

            .btn-login:hover {
                background-color: #e09e1c;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

        .main-heading {
            font-size: 2.8rem;
            font-weight: 300;
            line-height: 1.3;
            margin-bottom: 20px;
        }

        .content-section {
            padding: 80px 0;
            background: white;
        }

        footer.bg-primary-blue {
            background-color: var(--primary-blue);
            width: 100%;
            overflow-x: hidden;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/logo.png" alt="MAGHREB STEEL" class="logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Trial" asp-action="Index">Trial</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">A propos</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contacter nous</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link intranet-link" asp-controller="Home" asp-action="Intranet">LAC INTRANET</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero-section">
        <div id="particles-js"></div>
        <div class="hero-overlay"></div>
        <div class="container">
            <div class="hero-content">
                <h1 class="main-heading">Simplifiez la supervision, accélérez les décisions</h1>
                <a href="@Url.Action("Login", "Home")#loginSection" class="btn btn-login">Se Connecter</a>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="content-section">
        <div class="container">
            @RenderBody()
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-primary-blue text-white text-center py-4">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-auto px-3">
                    &copy; @DateTime.Now.Year - MAGHREB STEEL
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    @* Load particles.js only on Home/Index *@
    @{
        var isHomePage = ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
        ViewContext.RouteData.Values["action"]?.ToString() == "Index";
    }

    @if (isHomePage)
    {
        <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
        <script>
            particlesJS("particles-js", {
                "particles": {
                    "number": { "value": 80, "density": { "enable": true, "value_area": 800 } },
                    "color": { "value": "#ffffff" },
                    "shape": {
                        "type": "circle",
                        "stroke": { "width": 0, "color": "#000000" },
                        "polygon": { "nb_sides": 5 }
                    },
                    "opacity": {
                        "value": 0.5,
                        "random": false,
                        "anim": { "enable": true, "speed": 1, "opacity_min": 0.1, "sync": false }
                    },
                    "size": {
                        "value": 3,
                        "random": true,
                        "anim": { "enable": true, "speed": 40, "size_min": 0.1, "sync": false }
                    },
                    "line_linked": {
                        "enable": true,
                        "distance": 150,
                        "color": "#ffffff",
                        "opacity": 0.4,
                        "width": 1
                    },
                    "move": {
                        "enable": true,
                        "speed": 6,
                        "direction": "none",
                        "random": false,
                        "straight": false,
                        "out_mode": "out",
                        "bounce": false,
                        "attract": { "enable": false, "rotateX": 600, "rotateY": 1200 }
                    }
                },
                "interactivity": {
                    "detect_on": "window",
                    "events": {
                        "onhover": { "enable": true, "mode": "repulse" },
                        "onclick": { "enable": true, "mode": "push" }
                    },
                    "modes": {
                        "repulse": { "distance": 100, "duration": 0.4 },
                        "push": { "particles_nb": 4 }
                    }
                },
                "retina_detect": true
            });
        </script>
    }
</body>
</html>
